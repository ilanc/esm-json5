{
  "compilerOptions": {
    "outDir": "build",
    "listEmittedFiles": true,
    "target": "ESNext",
    "moduleResolution": "node",
    "module": "ESNext",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*.ts"],
  "exclude": [
    "node_modules/**",
    "**/node_modules/**",
    // "**/dist/**",
    "**/build/**",
    ".git"
  ]
}
